{% extends 'base.html.twig' %}

{% block title %}<title>Register employee</title>{% endblock %}
{% block body %}
    <body>
    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col-5">
                <h1>Employee registration</h1>
                <div style="color: red">
                    {#{% for message in error %}#}
                        {#{{ message }}<br>#}
                    {#{% endfor %}#}
                </div>
                <div id="default">
                    {{ form_start(registration_form) }}
                    Employee name: {{ form_widget(registration_form.firstname, {'attr': {'class': 'Employee'}}) }}</br>
                    Employee Lastname: {{ form_widget(registration_form.lastname, {'attr': {'class': 'Employee'}}) }}</br>
                    Employee email: {{ form_widget(registration_form.email, {'attr': {'class': 'Employee'}}) }}</br>
                    Employee phone number: {{ form_widget(registration_form.phoneNumber, {'attr': {'class': 'Employee'}}) }}</br>
                    Employee position: {{ form_widget(registration_form.position, {'attr': {'class': 'Employee'}}) }}</br>
                    Password: {{ form_widget(registration_form.plainPassword.first, {'attr': {'class': 'Employee'}}) }}</br>
                    Repeat password: {{ form_widget(registration_form.plainPassword.second, {'attr': {'class': 'Employee'}}) }}</br>
                    <button class="btn btn-primary">Save</button>
                    {{ form_end(registration_form) }}
                </div>
            </div>
            <div class="col"></div>

        </div>
    </div>




    {% block javascripts %}
        {{ parent() }}
        <script src={{ asset('scripts/sweetalert2.all.js') }}></script>
        <script type="text/javascript">
            function alertSuccess() {
                swal({
                    title: 'Registration successful',
                    type: 'success',
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'Ok'
                }).then((result) => {
                    if (result.value)
                {
                    window.location.replace('/');
                }
            })
            }
            function alertFailure() {
                swal({
                    position: 'center',
                    type: 'error',
                    title: 'Invalid fields',
                    showConfirmButton: false,
                    timer: 1500
                })
            }
        </script>
    {% endblock %}


