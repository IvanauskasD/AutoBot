{% extends 'base.html.twig' %}
{% block title %}<title>Prisijungimas</title>{% endblock %}
{% block body %}
    <div class="text-center">
        <form class="form-signin" action="{{ path('login') }}" method="POST">
            <div style="position:fixed;right: 39%">
                <h1 class="h3 mb-3 font-weight-normal">Prašome prisijungti</h1>
            </div>
            <input type="text"
                   id="_username"
                   name="_username"
                   class="form-control"
                   placeholder="Elektroninis paštas"
                   required autofocus>
            <input type="password"
                   id="_password"
                   name="_password"
                   class="form-control"
                   placeholder="Slaptažodis"
                   required>

            <button class="btn btn-lg btn-primary" style="position: absolute;top: 47%;width: 20%;left: 42%" type="submit">Prisijungti</button>
            {#<a style="position: absolute;top: 55%;left: 42%" href='{{ path('resetPassword') }}'>Reset password?</a>#}
        </form>
    </div>

{% endblock %}