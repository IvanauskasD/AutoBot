{% extends 'base.html.twig' %}

{% block body %}
    <h1>Profile</h1>
    <div id="user" style="font-weight: bold">
        Company name: {{ app.user.companyName  }}<br/>
        Company e-mail: {{ app.user.email  }}<br/>
        Company phone: {{ app.user.companyName  }}<br/>
        Company address: {{ app.user.adress  }}<br/>
    <br/>
    <br/>
            <h2>Client list</h2>
            <table align="center">
                <tr style="border-bottom: 3px solid #ddd;">
                    <th scope="row">Firstname</th>
                    <th></th>
                    <th scope="row">LastName</th>
                    <th></th>
                    <th scope="row">Phone Number</th>
                    <th></th>
                    <th scope="row">Role</th>
                </tr>
                {% for employee in employees %}
                        <tr>
                            <td>{{ employee.firstname }}</td>
                            <td></td>
                            <td>{{employee.lastname}}</td>
                            <td></td>
                            <td>{{employee.email}}</td>
                            <td></td>
                            <td>{{employee.position}}</td>
                        </tr>
                {% endfor %}
            </table>
        <button id="log_reg_employee"><a href="{{ path('registerEmployee') }}">Register employee</a></button>
    </div>

{% endblock %}